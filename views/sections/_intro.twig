<header class="intro">
    <div class="intro__content">
        <p class="intro__label" data-reveal="intro__label--active">
            {{ section.label }}
        </p>

        <h1 class="intro__title" data-title="left,top,bottom">{{ section.title }}</h1>

        <p class="intro__description" data-paragraph>
            {{ section.description }}
        </p>
    </div>

    <figure class="intro__media" data-parallax>
        {% set asset = getAsset(section.image) %}

        <img alt="{{ asset.alt }}" class="intro__media__image" data-src="{{ asset.url }}" height="100%" width="100%" />
    </figure>
</header>
